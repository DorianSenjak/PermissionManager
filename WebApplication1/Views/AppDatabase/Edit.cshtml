@model WebApplication1.ViewModels.App_BazaVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="AppName"></label>
        <select asp-for="AppName" class="form-control" asp-items="ViewBag.Apps">
            <option value="">Select App</option>
        </select>
        <span asp-validation-for="AppName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IDBaza"></label>
        <select asp-for="IDBaza" class="form-control" asp-items="ViewBag.Databases">
            <option value="">Select Database</option>
        </select>
        <span asp-validation-for="IDBaza" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="IDApp" /> <!-- Hidden field for IDApp -->
    <input type="hidden" asp-for="IDBaza" /> <!-- Hidden field for IDBaza -->

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
